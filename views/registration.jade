extends layout

block content
  link(rel='stylesheet', href='/stylesheets/registration.css')
  h1= title
  form(action='/register', method='post')
    ul.form-style-1
      li
        label(for='name') Name
          span.required *
        input.field-long(name='name', type='text', id='name')
      li
        label(for='email') Email Address
          span.required *
        input.field-long(name='email', type='text', id='email')
      li
        label(for='interests') Interests
        textarea.field-long.field-textarea(name='interests', type='textarea', id='interests', placeholder='List out some hobbies and things your interested in to help your santa :)')
      li.button
        input(type='submit', value='Register')
